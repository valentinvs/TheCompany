@model IEnumerable<TheCompany.Data.ContactInfo>

@{
    ViewBag.Title = "Contact Infos";
}

<h2>Available Contact Infos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactLabelEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactLabelBG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactDataEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactDataBG)
        </th>
        <th>
            Admin Operations
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactLabelEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactLabelBG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactDataEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactDataBG)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
